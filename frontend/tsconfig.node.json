{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl" : ".",
    "paths" : {
        "@/*": ["src/*"],
        "components/*": ["src/components/*"],
        "assets/*": ["src/assets/*"],
        "utils/*" : ["src/utils/*"],
        "pages/*" : ["src/pages/*"]
    }
  },
  "include": ["vite.config.ts"]
}
